    "prettier": "3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@openforis/arena-core": "^1.0.8",
